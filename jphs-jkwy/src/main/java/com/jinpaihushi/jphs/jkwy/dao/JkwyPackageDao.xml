	<select id="getDetail" resultMap="jkwyPackage">
		SELECT
			<include refid="field"/>, group_concat(
				DISTINCT p.`name`
				ORDER BY
					p.id
			) AS platformId
		FROM
			jkwy_package JP
		LEFT JOIN jkwy_package_platform jpp ON JP.id = jpp.jkwy_package_id
		LEFT JOIN platform p ON jpp.platform_id = p.id
		WHERE
			JP.id =#{id}
	</select>
